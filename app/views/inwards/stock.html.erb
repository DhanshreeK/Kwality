<%- model_class = Inward -%>

<div class="page-header">
  <h4><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h4>
</div>

<p>
  Download:
 <%= link_to "Excel", export_stock_current_inventories_path(format: "xlsx"), class: 'btn btn-success' %>
</p>

<table id="stocks" class="table table-striped">
	<thead>
	  <tr>
		<th>Product</th>
		<th>Quantity</th>
		<th></th>
		<th></th>
		<th></th>
	  </tr>
    </thead>
    <tbody>
	<% @current_inventories.each do |c| %>
		<tr>
			<td><%= c.product.name %></td>
			<td><%= c.current_quantity %></td>
			<td><%= link_to "Show" ,current_inventory_path(c),class: "btn btn-default btn-xs"  %></td>
			<td><%= link_to "Edit" ,edit_current_inventory_path(c),class: "btn btn-default btn-xs" %></td>
			
			<td><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      current_inventory_path(c),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %></td>
		</tr>
	<% end %>

	</tbody>

</table>


<script type="text/javascript">
        $('#stocks').dataTable()
        sPaginationType: "full_numbers"
</script>
	  
        
       
       
       

  
     

     

          







	
	
	
		









